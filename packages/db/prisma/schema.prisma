generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  dogs      Dog[]
  recipes   Recipe[]
  createdAt DateTime @default(now())
}

model Dog {
  id          String   @id @default(cuid())
  name        String
  breed       String?
  weightKg    Float?
  ageMonths   Int?
  bcs1to9     Int?
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     String
  plans       Plan[]
}

model Recipe {
  id          String   @id @default(cuid())
  title       String
  description String?
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     String
  ingredients RecipeIngredient[]
}

model Ingredient {
  id        String   @id @default(cuid())
  name      String
  nutrients IngredientNutrient[]
  recipes   RecipeIngredient[]
}

model RecipeIngredient {
  id           String     @id @default(cuid())
  recipe       Recipe     @relation(fields: [recipeId], references: [id])
  recipeId     String
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  ingredientId String
  grams        Float
}

model IngredientNutrient {
  id           String     @id @default(cuid())
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  ingredientId String
  nutrientKey  String
  amountPer100g Float
  unit         String
}

model Plan {
  id        String   @id @default(cuid())
  dog       Dog      @relation(fields: [dogId], references: [id])
  dogId     String
  weekStart DateTime
  daysJSON  Json
}
